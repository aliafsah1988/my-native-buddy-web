@import '../../../style/required'

.g-form-select
  position relative
  display inline-block
  width 100%
  border-radius(4px)
  background-color $white
  border 1px solid #b4bad2
  .g-form-select__text
    width 100%
    display flex
    .g-form-select--input
      height 42px
      background-color $white
      border-radius(4px)
      padding 16px
      font-size 16px
      border none
      cursor pointer
      width 100%
      &:focus
        outline none
    .g-form-select__text--indicator
      width 35px
      color black
    .g-form-select__text--loading
      width 35px
      color $nBrand
    .g-form-select__text--close
      width 35px
      color $gray
      padding-top 10px
  .dropdown-options
    position absolute
    background-color #f9f9f9
    min-width 160px
    box-shadow 0px 8px 16px 0px rgba(0,0,0,0.2)
    z-index 1
    width 100%
    .dropdown-options__item
      color $darker
      padding 12px 16px
      text-decoration none
      display block
      &:hover
        background $nBasicFive


